{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mnemosyne CV1 Envelope Schema",
  "type": "object",
  "description": "Enforces fixed-point string formatting for deterministic hashing.",
  "additionalProperties": false,
  "properties": {
    "emissive_budget": { 
      "type": "string", 
      "pattern": "^[0-9]+\\.[0-9]{6}$" 
    },
    "allowed_colors": { 
      "type": "array", 
      "items": { 
        "type": "string",
        "pattern": "^#[0-9a-fA-F]{6}$"
      },
      "uniqueItems": true
    }
  },
  "required": ["emissive_budget", "allowed_colors"]
}
